<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_admin_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.bigscreen.iconictabbar.view.IconicTabBar
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barBackground="@color/colorPrimary"
        app:tabDefaultColor="#fff"
        app:tabFromMenu="@menu/bottom_navigation_admin"
        app:tabSelectedColor="#fff"/>

</LinearLayout>